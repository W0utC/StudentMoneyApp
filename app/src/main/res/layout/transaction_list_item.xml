<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_list_item_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTransactionListDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:text="datum"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTransactionListAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/txtTransactionListDate"
            android:padding="5dp"
            android:text="amount" />

        <TextView
            android:id="@+id/txtTransactionListStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/txtTransactionListAmount"
            android:padding="5dp"
            android:text="storeStore" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>